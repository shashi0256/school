<br /><br /><br /><br />
    <div class="container">
        <!-- container1 -->
        <div class="row col-md-8 col-md-offset-2">
            <!-- row -->
            @foreach (MenuModal o in Model.menus)
            {
                <div class="col-lg-3 col-md-4 col-xs-6">
                    <a href="@o.MenuItemHref" class="thumbnail text-center text-muted">
                        <i class="material-icons">&@o.MenuIcon</i>
                        <h6>@o.MenuItem</h6>
                    </a>
                </div>
            }
            
        </div><!-- /row -->
    </div> <!-- /container1 -->
