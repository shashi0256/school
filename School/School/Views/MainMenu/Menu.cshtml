@model School.ViewModel.MenuViewModel
@using School.Models
@{
    ViewBag.Title = "Menu";
}

    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <style type="text/css">
        

        .material-icons {
            font-size: 6vw;
        }

        .thumbnail {
            border-color: #47d147;
        }
    </style>

    <!--
